	<h2 id="header">Indicas</h2>
	<% if @indicas.length > 0 %>
		<% @indicas.each do |x| %>
			<% if x.quantity > 0 %>
				<h4><%= x.name %> Gr: <%= x.donation_g %> Ei: <%= x.donation_e %> Ha: <%= x.donation_h %> Ou: <%= x.donation_o %></h4><br>
				<img id="image_loop" src="<%= x.image %>" alt="image">
			<% end %>
			<br>


			<% if current_user && current_user.admin %>
				<p>Edit <%= x.name %></p>
				<%= form_tag "/api/v1/edit_strain/#{x.id}", method: :post do %>
						Name: <input type="text" value="<%= x.name %>" name="name">
					<br>	
						Variety(Indica, Sativa, Concentrate, Edible): <input type="text" value="<%= x.variety %>" name="variety">

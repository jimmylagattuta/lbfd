						Location: <input type="text" value="<%= x.location %>" name="location">
					<br>
						Quantity(in grms): <input type="text" value="<%= x.quantity %>" name="quantity">
					<br>
					<input type="submit" value="Update Strain">
					<% end %>
			<% end %>
